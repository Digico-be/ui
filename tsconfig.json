{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@components/*": ["src/components/*"]
        }
    },
    "include": ["src"]
}
